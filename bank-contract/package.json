{
  "name": "@midnight-bank/bank-contract",
  "version": "0.1.0",
  "description": "Midnight Bank - Privacy-Preserving Banking Smart Contract",
  "author": "Midnight Developer",
  "license": "MIT",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf dist/ && rm -rf src/managed/",
    "compact": "compact compile src/bank.compact ./src/managed/bank",
    "typecheck": "tsc --noEmit",
    "build": "rm -rf dist && tsc && cp -Rf ./src/managed ./dist/managed",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@midnight-ntwrk/compact-runtime": "^0.8.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.2.2",
    "vitest": "^1.0.0"
  },
  "files": [
    "dist/"
  ]
}